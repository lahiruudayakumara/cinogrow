from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
from dotenv import load_dotenv
import os

# Load environment variables FIRST before importing anything else
load_dotenv()

# Import database and routers
from app.database import create_db_and_tables
from app.routers.yield_weather import weather, farm, farm_assistance, yield_prediction
from app.routers.fertilizer import (
    fertilizer_detection,
    fertilizer_detection_real,  # Re-enabled for feature analysis and ML predictions
    ml_metadata_api,
    cinnamon_analysis,
    enhanced_cinnamon_api
)
# Import simple features router
from app.routers import simple_features

app = FastAPI(
    title="Cinogrow Backend",
    description="Backend API for Cinogrow farming application",
    version="1.0.0"
)

app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

# Create database tables on startup
@app.on_event("startup")
def on_startup():
    create_db_and_tables()

# Include routers
app.include_router(weather.router, prefix="/api/v1")
app.include_router(farm.router, prefix="/api/v1")
app.include_router(farm_assistance.router, prefix="/api/v1")
app.include_router(yield_prediction.router, prefix="/api/v1")

# Fertilizer module routers (only the ones we use)
app.include_router(fertilizer_detection.router, prefix="/api/v1")
app.include_router(fertilizer_detection_real.router, prefix="/api/v1/fertilizer-detection")  # Re-enabled for ML predictions
app.include_router(ml_metadata_api.router, prefix="/api/v1")
app.include_router(cinnamon_analysis.router, prefix="/api/v1")
app.include_router(enhanced_cinnamon_api.router, prefix="/api/v1")

# Simple features router for compatibility
app.include_router(simple_features.router, prefix="/api/v1/fertilizer")

@app.get("/")
async def root():
    return {"message": "Welcome to Cinogrow Backend API"}

@app.get("/health")
async def health_check():
    return {
        "status": "healthy",
        "message": "Cinogrow Backend API is running",
        "version": "1.0.0"
    }
